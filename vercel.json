{
  "version": 2,
  "builds": [
    {
      "src": "client/**",
      "use": "@vercel/static-build",
      "config": {
        "zeroConfig": true,
        "framework": "create-react-app",
        "buildCommand": "cd client && npm install && npm run build",
        "outputDirectory": "client/build"
      }
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/socket.io/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "client/build/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}

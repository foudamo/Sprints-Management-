{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node@3.0.0"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build@3.0.0",
      "config": {
        "distDir": "build",
        "buildCommand": "npm install && npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/$1"
    }
  ]
}
